<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.ru.gui.TelaCardapioClienteController">
   <center>
      <VBox alignment="TOP_CENTER" spacing="10.0" style="-fx-background-color: #666699;" BorderPane.alignment="CENTER">
         <children>
            <Label text="Cardapio" textFill="WHITE">
               <font>
                  <Font name="Arial Bold" size="32.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="190.0">
               <children>
                  <Label text="Trivial" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label layoutX="10.0" layoutY="10.0" text="Vegano" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label layoutX="10.0" layoutY="10.0" text="Sobremesa" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label layoutX="66.0" layoutY="10.0" text="Suco" textFill="WHITE">
                     <font>
                        <Font name="Arial Bold" size="16.0" />
                     </font>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets top="50.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <ListView fx:id="listTrivial" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onEditStart="#listarItensTrivial" />
                  <ListView fx:id="listVegano" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onEditStart="#listarItensVegano" />
                  <ListView fx:id="listSobremesa" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onEditStart="#listarItensSobremesa" />
                  <ListView fx:id="listSuco" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" onEditStart="#listarItensSuco" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
